#external_logins
  h1 Please use one of these excellent sites to tell us who you are
  #fb-login.fb_button(style='background-position: left -188px').grid_3
    a.fb_button_medium(href='/auth/facebook')
      span#fb_login_text.fb_button_text
        Connect with Facebook
  #twitter-login.grid_3
    a(href='/auth/twitter', style='border: 0px')
      img(style='border: 0px', src='http://si0.twimg.com/images/dev/cms/intents/bird/bird_blue/bird_48_blue.png')
  #google-login.grid_3
    a(href='/auth/google', style='border: 0px')
      img(style='border: 0px', src='https://www.google.com/favicon.ico')

  - if (process.env.NODE_ENV != "production")
    #dev-mode.clear
    | Development login
    form(action="/dev-login", id="dev-login-form", method="POST")
      input(type="text", name="username", id="dev-username", value="developer")
      input(type='submit', value='Login!')
