h1.course-name= course.name

h2.course-summary= course.summary


- if (course.learnersNeeded(learners) > 0 && course.timeToJoin() > 0 )
  p.buy $
    = course.price
    form(action="/learning/#{course.permalink}", id="participation-form", method="POST")
      input(type='submit', value='Learn!')

  p.learners-to-go
      = course.learnersNeeded(learners)
      | 
      | more learners needed!

  p.time-left
    | Time left to join in Days (aprox.)
    = parseInt(course.timeToJoin() / 86400000);

- else
  //- TODO this message should be internationalised
  p.course-closed This course is closed for enrollment

p.course-description= course.description

- if (learners.length > 0)
  h3.learners-participating Learners
  ul
    - learners.forEach(function(learner) {
      li
       learner-name= learner.name
    - })
  
- if (!course.inFlight(learners))
  h3.awards-call-to-action
    | Are you a member of this course?
    a(href="/courses/#{course.permalink}/awards/new").award Reward your most helpful coursemates!
